{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://openpackage.dev/schemas/formats/universal-agent.schema.json",
  "title": "Universal Agent Frontmatter",
  "description": "Baseline universal format for agent frontmatter. Used as fallback when no platform-specific format matches.",
  "type": "object",
  "properties": {
    "description": {
      "type": "string",
      "x-detection-weight": 0.1
    },
    "tools": {
      "type": "array",
      "items": { "type": "string" },
      "x-detection-weight": 0.3
    },
    "model": {
      "type": "string",
      "x-detection-weight": 0.2
    },
    "permissions": {
      "type": "object",
      "x-detection-weight": 0.3
    }
  },
  "x-detection": {
    "platform": "universal"
  }
}
